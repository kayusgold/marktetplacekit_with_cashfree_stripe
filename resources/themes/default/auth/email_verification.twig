{% extends "layouts.app" %}

{% block content %}
    <div class="container " data-turboliks="false">
        <div class="row flex-column pt-5 mt-5 align-items-center">
            <div class="col-lg-6 col-sm-10 col-xs-6" style="position: relative">

                {% include 'notifications' %}

                <h5>{{ __('Please confirm your email...') }}</h5>
                <p>{{ __("You'll need to verify your email to access all features. We've sent a confirmation email to:") }}<br /><span class="font-weight-bold text-primary">{{ auth_user().email }}</span></p>
                <small class="text-muted">{{ "Don't forget to check your spam folder just incase." }}</small>
                <br />
                <br />

                <hr />
                <p>{{ __("If you don't receive an email, you can ") }} <a href="{{ route('email-verification.resend') }}" data-turbolinks="false" class="  text-muted font-weight-bolds text-dec"> <u>{{ __('resend the confirmation email.') }}</u></a></p>

            </div>
        </div>
    </div>

{% endblock %}

{% block navbar %}
    <a href="{{url_previous(route('home'))}}" class="close-btn" style="position: absolute; top: 20px; right: 20px;"><i class="mdi mdi-close text-muted" style="font-size: 30px;"></i></a>
{% endblock %}

{% block footer %}
    <footer class="bg-white border-0" >
    </footer>
{% endblock %}

{% block search_bar %}
{% endblock %}
